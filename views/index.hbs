<section id="featured">
    <h2>Latests articles</h2>
    {{#each articles}}
        <article>
            <h3>{{article.title}}</h3>
            <p>
                {{article.description}}&hellip;  
                {{!-- &hellip; is simply 3 dots --}}
            </p>
            <div class="controls">
                <a href="/article/details/{{article._id}}">Read more</a>
            </div>
        </article>
    {{/each}}
</section>

